module.exports = function (grunt) {

grunt.initConfig({
  watch: {
    scripts: {
      files: ['src/js/**/*.js'],
      tasks: [],
    },
  },
});


grunt.loadNpmTasks('grunt-contrib-watch');


grunt.event.on('watch', function(action, filepath, target) {
  grunt.log.writeln(target + ': ' + filepath + ' has ' + action);
});

}